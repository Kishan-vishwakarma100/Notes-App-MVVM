<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:maxLength="8"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/viewPriority"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/red_dot"
                android:layout_alignRight="@id/notesTitle" />

            <TextView
                android:id="@+id/notesSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D8D8D8"
                android:textSize="15sp"
                android:maxLines="10"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/notesTitle"
                android:fontFamily="@font/regular"
                android:text="Hello World!"/>

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:maxLength="10"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/notesSubTitle"
                android:text="21 Jan 2023"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>