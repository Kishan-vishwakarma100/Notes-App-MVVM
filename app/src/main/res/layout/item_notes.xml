<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/notesSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D8D8D8"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="jsldjfouwserjfgjoiwfoijweoifoijwejiofjoiwjefiojwoiejfoijwojflwsjfoijwofjoiwjfjfoijwoiejfoijwoieoifoiwejhofioiwhfuiowhefoijwoefowefhoiwehfwhefhiowhfo"/>

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:text="21 Jan 2023"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>